{
  "manifest_version": 3,
  "name": "Productivity Logger",
  "version": "1.1",
  "description": "Logs websites visited and computes relevancy with respect to user purpose.",
  "permissions": [
    "tabs",
    "storage",
    "notifications",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
